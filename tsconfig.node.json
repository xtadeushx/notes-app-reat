{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["/src/components/*"],
      "@assets/*": ["/src/assets/*"],
      "@hooks/*": ["/src/hooks/*"],
      "@layout/*": ["/src/layout/*"],
      "@pages/*": ["/src/pages/*"],
      "@redux/*": ["/src/redux/*"],
      "@utils/*": ["/src/utils/*"],
      "@styles/*": ["/src/styles/*"],
      "@common/*": ["/src/common/*"]
    }
  },
  "include": ["vite.config.ts"]
}
